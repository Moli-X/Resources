[Rule]
AND, ((PROTOCOL, QUIC), (DOMAIN-SUFFIX, xiaohongshu.com)), REJECT

[Rewrite]
^https:\/\/ci\.xiaohongshu\.com\/system_config\/watermark reject-img

^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v1\/surprisebox\/(?:get_style|open|submit_action) reject-dict
^https:\/\/www\.xiaohongshu\.com\/api\/marketing\/box\/trigger\? reject-dict

^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/(?:v2\/guide\/user_banner|v3\/note\/guide) reject-dict
^https:\/\/www\.xiaohongshu\.com\/api\/sns\/(?:v1\/ads\/resource|v2\/hey\/\w+\/hey_gallery) reject-dict

^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v1\/search\/banner_list$ response-body-json-replace data {}
^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v1\/search\/hot_list$ response-body-json-replace data.items []
^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v4\/search\/hint response-body-json-replace data.hint_words []
^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v4\/search\/trending\? response-body-json-replace data.queries [] data.hint_word {}

[Script]
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v1\/note\/(?:imagefeed|live_photo\/save) script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除图片和实况照片水印
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v1\/system\/service\/ui\/config\? script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除整体配置 ui
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v1\/system_service\/config\? script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除开屏广告 config
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v2\/system_service\/splash_config script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除开屏广告 splash_config
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v2\/(?:note\/widgets|user\/followings\/followfeed) script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除详情页小部件、关注页感兴趣的人
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v4\/followfeed\? script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除信息流广告
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v5\/recommend\/user\/follow_recommend\? script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除详情页感兴趣的人
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/v10\/search\/notes\? script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除搜索页广告
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/(?:v1\/interaction\/comment\/video\/download|v5\/note\/comment\/list) script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除评论区实况照片水印
http-response ^https:\/\/edith\.xiaohongshu\.com\/api\/sns\/(?:v2\/note\/feed|v3\/note\/videofeed) script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除图片和视频水印
http-response ^https:\/\/(?:edith|rec)\.xiaohongshu\.com\/api\/sns\/v6\/homefeed\? script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除信息流广告
http-response ^https:\/\/(?:edith|rec|www)\.xiaohongshu\.com\/api\/sns\/(?:v4\/note\/videofeed|v10\/note\/video\/save) script-path=https://github.com/Moli-X/Resources/raw/Master/Loon/Plugin/Script/RedPaper_remove_ads.js, requires-body=true, tag=移除视频水印

[MitM]
hostname=ci.xiaohongshu.com, edith.xiaohongshu.com, rec.xiaohongshu.com, www.xiaohongshu.com